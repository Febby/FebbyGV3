---
// Base layout component that wraps every page. It imports the global stylesheet
// and provides a header and footer for consistent navigation.
import '../styles/global.css';

// Props: title for document head. Default to site name.
const { title = 'Febby Gunawan Portfolio' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <header class="sticky top-0 z-10 bg-white/70 backdrop-blur shadow-sm">
      <nav class="max-w-6xl mx-auto flex items-center justify-between p-4">
        <a href="/" class="text-xl font-semibold">Febby G.</a>
        <ul class="flex space-x-6 text-sm">
          <li><a href="#about" class="hover:text-blue-600">About</a></li>
          <li><a href="#projects" class="hover:text-blue-600">Projects</a></li>
          <li><a href="#contact" class="hover:text-blue-600">Contact</a></li>
        </ul>
      </nav>
    </header>
    <main class="flex-1">
      <slot />
    </main>
    <footer class="py-6 text-center text-sm text-gray-500">
      Â© {new Date().getFullYear()} Febby Gunawan. All rights reserved.
    </footer>
  </body>
</html>